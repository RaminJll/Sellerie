{% extends 'base.html.twig' %}

{% block body %}
	<section class="bg-gray-50 dark:bg-gray-900">
		<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
			<div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
				<div class="p-6 space-y-4 md:space-y-6 sm:p-8">
					<h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
						Ajouter un produit
					</h1>
					{{ form_start(form, { 'method': 'POST', 'attr': { 'class': 'space-y-4 md:space-y-6' } }) }}
					<div>
						{{ form_label(form.nom, 'Nom', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.nom, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.nom) }}
					</div>
					<div>
						{{ form_label(form.categorie, 'Catégorie', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.categorie, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.categorie) }}
					</div>
					<div>
						{{ form_label(form.type_produit, 'Type de produit', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.type_produit, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.type_produit) }}
					</div>
					<div>
						{{ form_label(form.etat, 'État', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.etat, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.etat) }}
					</div>
					<div>
						{{ form_label(form.date_achat, 'Date d\'achat', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.date_achat, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.date_achat) }}
					</div>
					<div>
						{{ form_label(form.planning, 'Planning', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.planning, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.planning) }}
					</div>
					<div>
						{{ form_label(form.categorie_rayon, 'Catégorie rayon', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.categorie_rayon, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.categorie_rayon) }}
					</div>
					<div>
						{{ form_label(form.etagere, 'Étagère', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.etagere, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.etagere) }}
					</div>
					<button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
						Ajouter
					</button>
					{{ form_end(form) }}
					{% for message in app.flashes('success') %}
						<div class="text-white alert alert-success">{{ message }}</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
