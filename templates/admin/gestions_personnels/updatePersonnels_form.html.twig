{% extends 'base.html.twig' %}

{% block body %}
	<section class="bg-gray-50 dark:bg-gray-900">
		<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
			<div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
				<div class="p-6 space-y-4 md:space-y-6 sm:p-8">
					<h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
						Modifier un utilisateur
					</h1>
					{{ form_start(form, { 'method': 'POST', 'attr': { 'class': 'space-y-4 md:space-y-6' } }) }}
					<div>
						{{ form_label(form.nom, 'Nom', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.nom, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.nom) }}
					</div>
					<div>
						{{ form_label(form.email, 'Email', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.email, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.email) }}
					</div>
					<div>
						{{ form_label(form.password, 'Mot de passe (laisser vide pour ne pas changer)', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.password, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.password) }}
					</div>
					<div>
						{{ form_label(form.role, 'RÃ´le', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' } }) }}
						{{ form_widget(form.role, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
						{{ form_errors(form.role) }}
					</div>
					<button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
						Modifier
					</button>
					{{ form_end(form) }}
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">{{ message }}</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
